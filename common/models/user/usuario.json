{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": true,
  "properties": {
    "firstName": {
      "type": "string",
      "required": false
    },
    "lastName": {
      "type": "string",
      "required": false
    },
    "socialNetworks": {
      "type": [
        "object"
      ],
      "required": false,
      "default": "[]"
    },
    "fame": {
      "type": [
        "object"
      ],
      "requiered": false,
      "default": "[]"
    },
    "brithdate": {
      "type": "date"
    },
    "points": {
      "type": "number"
    },
    "precision": {
      "type": "object",
      "default": {
        "valor": 0,
        "nropost": 0
      }
    },
    "visit": {
      "type": "number",
      "default": 0
    },
    "realm": {
      "type": "string",
      "required": false,
      "default": "normal"
    }
  },
  "validations": [],
  "relations": {
    "signals": {
      "type": "hasMany",
      "model": "Signal",
      "foreignKey": ""
    },
    "news": {
      "type": "hasMany",
      "model": "News",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "upload",
        "verPagaSe√±al",
        "updateInfo"
      ]
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "upload": {
      "http": {
        "path": "/:id/upload",
        "verb": "post"
      },
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      }
    },
    "updateInfo": {
      "http": {
        "path": "/:id/updateInfo",
        "verb": "put"
      },
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "path": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": {
        "arg": "user",
        "type": "object"
      }
    }
  }
}